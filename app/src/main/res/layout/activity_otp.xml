<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sign.signUp.OtpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:layout_marginEnd="32dp"
                android:text="Masukkan Kode OTP"
                android:textColor="@color/font500"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textFontWeight="500"
                android:fontFamily="@font/nunito_bold"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/nunito_light"
                android:textColor="@color/font500"
                android:textFontWeight="400"
                android:text="Masukkan kode OTP sebagai verifikasi kemanan yang sudah dikirimkan ke Email anda"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                tools:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <EditText
                    android:id="@+id/otpEditText1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="34dp"
                    android:background="@drawable/otp_box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/otpEditText2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="34dp"
                    android:background="@drawable/otp_box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

                <EditText
                    android:id="@+id/otpEditText3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="34dp"
                    android:background="@drawable/otp_box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

                <EditText
                    android:id="@+id/otpEditText4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/otp_box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/otp_wrong"
                android:textColor="@color/danger500"
                android:textFontWeight="400"
                android:textSize="11sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:alpha="0" />

            <com.citiasia.inidesakubeta.ui.customView.EditButton
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="@string/masuk"
                android:enabled="false"
                android:textColor="@color/white"
                tools:ignore="VisualLintButtonSize,TextContrastCheck,VisualLintOverlap" />

            <RelativeLayout
                android:id="@+id/resend_otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/resend_otp_text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak mendapatkan Kode?"
                    android:textSize="11sp"
                    android:alpha="0"
                    android:textFontWeight="400"
                    android:textColor="@color/font500"
                    android:fontFamily="@font/nunito_light"
                    tools:ignore="VisualLintOverlap" />

                <TextView
                    android:id="@+id/resend_otp_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim kembali kode OTP"
                    android:textSize="11sp"
                    android:alpha="1"
                    android:textFontWeight="400"
                    android:textColor="@color/font500"
                    android:fontFamily="@font/nunito_light" />

                <TextView
                    android:id="@+id/countdown_resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(02.00)"
                    android:textSize="11sp"
                    android:textFontWeight="400"
                    android:layout_marginStart="124dp"
                    android:textColor="@color/primary500"
                    android:fontFamily="@font/nunito_light"/>

                <LinearLayout
                    android:id="@+id/btn_resend_otp_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:alpha="0"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14sp"
                        android:layout_height="14sp"
                        android:src="@drawable/resend_otp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/btn_resend_otp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kirim ulang code"
                        android:textSize="11sp"
                        android:textFontWeight="400"
                        android:textColor="@color/font500"
                        android:fontFamily="@font/nunito_light"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>