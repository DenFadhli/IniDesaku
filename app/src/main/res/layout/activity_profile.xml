<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary500">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationIconTint="@color/white"
        app:title="Profil"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:titleTextColor="@color/white"
        app:titleCentered="true"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp">

    </com.google.android.material.appbar.MaterialToolbar>

</com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/primary500"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:outlineAmbientShadowColor="@color/transparent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="40dp"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    app:tint="@color/red"
                    app:backgroundTint="@color/primary100"
                    android:src="@drawable/red_camer_icon"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    app:cardCornerRadius="80dp"
                    android:backgroundTint="@color/font100">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agnes Naibaho"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@Agnes123"
            android:textSize="11sp"
            android:textColor="@color/primary500"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:id="@+id/tv_nama_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>
                
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>


                <TextView
                    android:id="@+id/tv_username_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:id="@+id/tv_nama_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="agnesnaibaho@gmail.com"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tv_username_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:id="@+id/tv_nama_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0812345678"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tv_username_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:id="@+id/tv_nama_fill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gelarmendala, kec. Baolongan Kab. INDRAMAYU - JAWA BARAT"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:outlineProvider="bounds"
                android:text="Ubah Data Diri"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:elevation="2dp"
                app:icon="@drawable/profile_icon"
                app:iconTint="@color/font500"
                app:iconGravity="textStart"
                android:backgroundTint="@color/font100"
                app:strokeColor="@color/font200"
                android:textColor="@color/font500"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ganti"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/font100"
                android:letterSpacing="0"
                android:text="Ganti Password"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:strokeColor="@color/font200"
                android:textColor="@color/font500"
                app:iconTint="@color/font500"
                app:iconGravity="textStart"
                app:icon="@drawable/key_fill_icon"/>

            <Button
                android:id="@+id/btn_keluar"
                style="materialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Keluar"
                app:backgroundTint="@color/red"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="anda perlu bantuan?"
                android:textAlignment="center"
                android:textColor="@color/font300" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>