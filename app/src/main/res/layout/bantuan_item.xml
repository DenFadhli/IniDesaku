<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagaimana cara membuat akun di aplikasi ini?"
            android:textFontWeight="600"
            android:textColor="@color/font600"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingRight="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/expandedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/descHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda dapat membuat akun dengan mengikuti langkah-langkah pendaftaran yang sederhana di aplikasi."
        android:textFontWeight="500"
        android:textColor="@color/font400"
        android:fontFamily="@font/nunito_medium"
        android:textSize="12sp"
        android:layout_marginTop="40dp"
        android:paddingRight="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutItem" />

    <View
        android:id="@+id/rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp"
        android:background="@color/rule_bantuan"
        android:layout_below="@id/layoutItem" />

</RelativeLayout>

