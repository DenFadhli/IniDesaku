<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pengaturanPin.fragmentPin.PengaturanPinFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_anchor="@+id/appBarLayout"
            app:layout_anchorGravity="center"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Pengaturan Pin"
            app:titleCentered="true"
            app:titleTextAppearance="@style/Theme.IniDesakuBeta.TextView.SemiBold16.600"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btnUbahPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tvUbahPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubah_pin"
            android:layout_weight="1"
            style="@style/Theme.IniDesakuBeta.TextView.Medium14.500"/>

        <ImageView
            android:id="@+id/iconUbahPin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerUbahPin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnUbahPin"
        app:layout_constraintStart_toStartOf="@id/btnUbahPin"
        app:layout_constraintEnd_toEndOf="@id/btnUbahPin" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btnLupaPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/dividerUbahPin"
        app:layout_constraintStart_toStartOf="@id/dividerUbahPin"
        app:layout_constraintEnd_toEndOf="@id/dividerUbahPin">

        <TextView
            android:id="@+id/tvLupaPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lupa_pin"
            android:layout_weight="1"
            style="@style/Theme.IniDesakuBeta.TextView.Medium14.500"/>

        <ImageView
            android:id="@+id/iconLupaPin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerLupaPin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnLupaPin"
        app:layout_constraintStart_toStartOf="@id/btnLupaPin"
        app:layout_constraintEnd_toEndOf="@id/btnLupaPin" />

</androidx.constraintlayout.widget.ConstraintLayout>