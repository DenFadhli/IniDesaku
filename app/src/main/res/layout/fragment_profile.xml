<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.profileFragment.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/primary500"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/transparent"
                android:outlineSpotShadowColor="@color/transparent"
                android:outlineAmbientShadowColor="@color/transparent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabCustomSize="40dp"
                    android:layout_gravity="bottom|right"
                    android:clickable="true"
                    app:tint="@color/red"
                    app:backgroundTint="@color/primary100"
                    android:src="@drawable/red_camer_icon"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    app:cardCornerRadius="80dp"
                    android:backgroundTint="@color/font100">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user_avatar_ulasan" />

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:fontFamily="@font/nunito_bold"
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_nama"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:fontFamily="@font/nunito_medium"
            android:id="@+id/tvEmailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_dummy"
            android:textSize="11sp"
            android:textColor="@color/primary500"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/nunito_light"
                    android:id="@+id/tvJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jenis_kelamin"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:fontFamily="@font/nunito_regular"
                    android:id="@+id/tvJenisKelaminValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/perempuan"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>


                <TextView
                    android:fontFamily="@font/nunito_light"
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:fontFamily="@font/nunito_regular"
                    android:id="@+id/tvEmailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_dummy"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:fontFamily="@font/nunito_light"
                    android:id="@+id/tvNomorTelepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nomor_hp"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:fontFamily="@font/nunito_regular"
                    android:id="@+id/tvNomorTeleponValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_dummy"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:fontFamily="@font/nunito_light"
                    android:id="@+id/tvAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alamat"
                    android:textSize="10sp"
                    android:paddingHorizontal="20dp"/>

                <TextView
                    android:fontFamily="@font/nunito_regular"
                    android:id="@+id/tvAlamatValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alamat_dummy"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="20dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:outlineProvider="bounds"
                android:text="@string/ubah_data_diri"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:elevation="2dp"
                app:icon="@drawable/profile_solid"
                app:iconTint="@color/font500"
                app:iconGravity="textStart"
                android:backgroundTint="@color/font100"
                app:strokeColor="@color/font200"
                android:textColor="@color/font500"/>

            <com.google.android.material.button.MaterialButton
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/btn_ganti"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/font100"
                android:letterSpacing="0"
                android:text="@string/ganti_password"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:strokeColor="@color/font200"
                android:textColor="@color/font500"
                app:iconTint="@color/font500"
                app:iconGravity="textStart"
                app:icon="@drawable/key_fill_icon"/>

            <Button
                android:fontFamily="@font/nunito_bold"
                android:id="@+id/btn_keluar"
                style="materialButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Keluar"
                app:backgroundTint="@color/red"
                app:cornerRadius="8dp" />

            <TextView
                android:fontFamily="@font/nunito_medium"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="anda perlu bantuan?"
                android:textAlignment="center"
                android:textColor="@color/font300" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>