<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/tv_nama_kegiatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Kegiatan"
                android:padding="8dp"
                android:lineSpacingExtra="1.5dp"
                style="@style/Theme.IniDesakuBeta.Text.Headline5"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aldi"
                android:drawableLeft="@drawable/users_icon"
                android:drawableTint="@color/font400"
                android:drawablePadding="8dp"
                android:padding="8dp"
                style="@style/Theme.IniDesakuBeta.Text.Caption"/>

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23 November 2023"
                android:drawableLeft="@drawable/clock_icon"
                android:drawableTint="@color/font400"
                android:drawablePadding="8dp"
                android:padding="8dp"
                style="@style/Theme.IniDesakuBeta.Text.Caption"/>

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:drawableLeft="@drawable/eye_icon"
                android:drawableTint="@color/font400"
                android:drawablePadding="8dp"
                android:padding="8dp"
                style="@style/Theme.IniDesakuBeta.Text.Caption"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>