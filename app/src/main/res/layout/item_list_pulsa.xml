<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="6dp"
    app:strokeColor="@color/font100"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/tvPulsa"
            style="@style/Theme.IniDesakuBeta.TextView.Medium12.500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="@string/pulsa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNominal"
            style="@style/Theme.IniDesakuBeta.TextView.Bold16.700"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/tvPulsa"
            app:layout_constraintStart_toStartOf="@id/tvPulsa"
            app:layout_constraintTop_toBottomOf="@id/tvPulsa"
            tools:text="15.000" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/pulsaDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            app:dividerColor="@color/font100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNominal" />

        <TextView
            android:id="@+id/tvHarga"
            style="@style/Theme.IniDesakuBeta.TextView.Bold14.700"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/tvNominal"
            app:layout_constraintStart_toStartOf="@id/tvNominal"
            app:layout_constraintTop_toBottomOf="@id/pulsaDivider"
            tools:text="Harga Rp. 17.000" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.circularreveal.cardview.CircularRevealCardView>