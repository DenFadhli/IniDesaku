<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="6dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="8dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Theme.IniDesakuBeta.TextBold.Subtitle1"
            tools:text="15.000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvMasaAktif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvNominal"
            app:layout_constraintStart_toStartOf="@id/tvNominal"
            app:layout_constraintEnd_toEndOf="@id/tvNominal"
            style="@style/Theme.IniDesakuBeta.Text.CaptionButton"
            tools:text="+ Masa aktif 12 hari"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/pulsaDivider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvMasaAktif"
            app:layout_constraintStart_toStartOf="@id/tvMasaAktif"
            app:layout_constraintEnd_toEndOf="@id/tvMasaAktif"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pulsaDivider"
            app:layout_constraintStart_toStartOf="@id/pulsaDivider"
            app:layout_constraintEnd_toEndOf="@id/pulsaDivider"
            tools:text="Harga Rp. 17.000"
            style="@style/Theme.IniDesakuBeta.TextBold.Subtitle1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>