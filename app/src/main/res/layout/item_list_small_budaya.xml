<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar_budaya"
            android:layout_width="96dp"
            android:layout_height="66dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageView8dp"
            app:strokeColor="#676E7629"
            app:strokeWidth="2dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/nama_budaya"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="16sp"
            android:text="@string/nama_budaya"
            android:textAlignment="center"
            android:textColor="#565E73"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/gambar_budaya"
            app:layout_constraintStart_toStartOf="@+id/gambar_budaya"
            app:layout_constraintTop_toBottomOf="@+id/gambar_budaya" />

        <TextView
            android:id="@+id/selengkapnya"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="16sp"
            android:text="@string/selengkapnya"
            android:textAlignment="center"
            android:textColor="#B3B9C6"
            android:textSize="9sp"
            android:paddingBottom="2dp"
            app:layout_constraintEnd_toEndOf="@id/gambar_budaya"
            app:layout_constraintStart_toStartOf="@+id/gambar_budaya"
            app:layout_constraintTop_toBottomOf="@+id/nama_budaya" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>